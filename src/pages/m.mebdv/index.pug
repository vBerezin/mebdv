extends ~layout/l-mobile/index

include ~mobile/section-products/mixin

block variables
	- TITLE = 'Главная'

block main
	include ~mobile/section-slider/index
	include ~mobile/section-catalog/index
	+section-products({
		title: 'Новинки',
		icon: 'new',
		mods: 'bottom'
	})
	+section-products({
		title: 'Хиты продаж',
		icon: 'star',
		mods: 'bottom'
	})
	+section-products({
		title: 'Распродажа',
		icon: 'tag',
		mods: 'bottom'
	})
	+section-products({
		title: 'Скидки в июне',
		icon: 'calendar',
		mods: 'bottom'
	})
	+section-products({
		title: 'Ликвидация склада',
		icon: 'home',
		mods: 'bottom'
	})
	include ~mobile/section-features/index
	include ~mobile/section-about/index

block prepend footer
	include ~mobile/section-contact/index
	include ~mobile/section-map/index

block stylesheets
	link(rel="stylesheet" href=`/m.index.css?${$.version}`)
block scripts
	script(src=`/m.index.js?${$.version}`)
