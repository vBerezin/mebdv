include ~blocks/pager/mixin
include ~blocks/button/mixin
include ~blocks/product-panel/mixin

-
	pager = {
		items: [
			{
				title: '1',
				href: '#',
			},
			{
				title: '2',
				href: '#',
			},
			{
				title: '3',
				active: true,
			},
			{
				title: '4',
				href: '#',
			},
			{
				title: '5',
				href: '#',
			},
			{
				title: '6',
				href: '#',
			},
			{
				title: '7',
				href: '#',
			},
			{
				title: '...',
				href: '#',
			},
		]
	}

.catalog.js-catalog
	.catalog__head
		include ~blocks-mobile/catalog-filter/index
	.catalog__body
		.catalog__grid(data-rel="catalog.list")
			each item in [1,2,3,4,5,6,7,8]
				+product-panel({
					href: '/m.mebdv/product',
					attributes: {
						id: `product-${item}`
					}
				})
	.catalog__footer
		.catalog__loader
			+button({ mods: ['block', 'round'] }) Показать больше
		.catalog__pager
			+pager(pager)
