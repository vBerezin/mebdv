include ~blocks/button/mixin
include ~blocks/form/mixin
include ~blocks/form-title/mixin
include ~blocks/form-field/mixin
include ~blocks/form-head/mixin
include ~blocks/form-footer/mixin
include ~blocks/form-label/mixin

+form({
	mods: 'large',
	class: 'form-feedback',
})
	.form-feedback__inner
		+form-head({ mods: 'center '})
			+form-title({ mods: 'large' }) Обратная связь
		.form-feedback__body
			+form-field
				input(type="text" placeholder="Ваше имя")
			+form-field
				input(type="email" placeholder="example@mail.ru")
			+form-field
				input(type="tel" placeholder="+7 (XXX) XXX-XX-XX" required)
			+form-field({
				class: 'form-feedback__message'
			})
				textarea(placeholder="Текст сообщения")
		+form-footer({
			class: 'form-feedback__footer'
		})
			.form-feedback__submit
				+button({
					mods: ['block','orange', 'round'],
					attributes: {
						type: 'submit'
					}
				}) Отправить
