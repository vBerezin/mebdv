include ~blocks/button/mixin
include ~blocks/button-rating/mixin
include ~blocks/form/mixin
include ~blocks/form-title/mixin
include ~blocks/form-field/mixin
include ~blocks/form-head/mixin
include ~blocks/form-footer/mixin
include ~blocks/form-label/mixin
include ~blocks/input-phone/mixin

mixin form-review(data)
	- data = data || {};
	- data.class = [].concat(data.class, 'form-review')
	- data.mods = [].concat(data.mods, 'large')
	+form(data)
		.form-review__inner
			+form-head({ mods: 'center '})
				+form-title({ mods: 'large' }) Оставить отзыв
			.form-review__body
				+form-field
					input(type="text" placeholder="Ваше имя")
				+form-field
					input(type="email" placeholder="example@mail.ru")
				+form-field
					+input-phone
				+form-field({
					class: 'form-review__message'
				})
					textarea(placeholder="Текст отзыва")
			+form-footer({
				class: 'form-review__footer'
			})
				if (data.rating)
					.form-review__rating
						.form-review__rating-title Оценка:
						+button-rating
				.form-review__submit
					+button({
						mods: ['block','orange', 'round'],
						attributes: {
							type: 'submit'
						}
					}) Оставить отзыв
