include ~blocks/review/mixin
include ~blocks/pager/mixin

.reviews
	each item in [1,2,3,4,5]
		+review({
			class: 'reviews__item'
		})
	.reviews__pager
		+pager({
			mods: 'right',
			items: [
				{
					title: '1',
					href: '#',
				},
				{
					title: '2',
					href: '#',
				},
				{
					title: '3',
					active: true,
				},
				{
					title: '4',
					href: '#',
				},
				{
					title: '5',
					href: '#',
				},
				{
					title: '6',
					href: '#',
				},
				{
					title: '7',
					href: '#',
				},
				{
					title: '...',
					href: '#',
				},
			]
		})
	.reviews__form
		include ~desktop/form-feedback/index-review
