include ~blocks/pager/mixin
include ~blocks/button/mixin
include ~blocks/product-panel/mixin

-
	pager = {
		title: 'Страницы:',
		items: [
			{
				title: '1',
				href: '#',
			},
			{
				title: '2',
				href: '#',
			},
			{
				title: '3',
				active: true,
			},
			{
				title: '4',
				href: '#',
			},
			{
				title: '5',
				href: '#',
			},
			{
				title: '6',
				href: '#',
			},
			{
				title: '7',
				href: '#',
			},
		]
	}

.catalog.js-catalog
	.catalog__head
		.catalog__filter(data-rel="catalog.filter")
	.catalog__body
		.catalog__grid(data-rel="catalog.list")
			- items = []
			- items.length = 24;
			each item, index in items
				+product-panel({
					href: '/m.mebdv/product',
					attributes: {
						id: `product-${index}`
					}
				})
	.catalog__footer
		.catalog__loader
			+button({
				mods: ['block', 'round'],
				attributes: {
					'data-page-current': 1,
					'data-page-count': 5,
					'data-page-url': '?getPage=',
					'data-click': 'catalog.more'
				}
			}) Показать больше
		.catalog__pager(data-rel="catalog.pager")
			+pager(pager)
