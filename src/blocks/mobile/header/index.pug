		{
			title: 'Мягкая мебель',
			image: {
				src: '/images/menu/catalog-2.svg'
			}
		},
		{
			title: 'Гостиная',
			image: {
				src: '/images/menu/catalog-3.svg'
			}
		},
		{
			title: 'Спальня',
			image: {
				src: '/images/menu/catalog-4.svg'
			}
		},
	]
	menuItems = [
		{
			title: 'О магазине',
			href: '/m.mebdv/about'
		},
		{
			title: 'Каталог мебели',
