include ~blocks/popup/mixin
include ~blocks/image/mixin
include ~blocks/button/mixin
include ~blocks/form-label/mixin
include ~blocks/color-preview/mixin

+popup({
	title: 'Изменить ткань',
	mods: 'large',
	class: 'popup-color',
	attributes: {
		id: 'popup-color'
	}
})
	.popup-color__inner
		.popup-color__aside
			.popup-color__head
				include ~blocks/form-color/index
			+color-preview({
				class: 'popup-color__preview',
			})
		.popup-color__main
			include ~blocks/colors-search/index
