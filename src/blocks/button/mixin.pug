include ~blocks/icon/mixin

mixin button(data)
	-
		data = data || {};
		url = data.attributes && data.attributes.href;
		tagName = url ? 'a' : 'button';
	#{tagName}.button(
		class=data.class
		class=mods('button', data.mods)
		)&attributes(data.attributes)
		if (data.icon)
			+icon({ name: data.icon, class: 'button__icon' })
		block
